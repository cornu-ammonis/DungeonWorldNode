html 
	head
		title= title
	body
		h1= title


		form(method='POST' action= actionUrl)
			div.form-group
				label(for='name') Character Name:
				input#name.form-control(type='text', name='name', value=(undefined===name ? '' : name))

				label(for='str') STR:
				input#str.form-control(type='text', name='str' value=(undefined===str ? '' : str))

				label(for = 'int') INTL
				intput#int.form-control(type='text', name='int', value=(undefined===int ? '' : int))
			button.btn.btn-primary(type='submit') Submit

		if errors 
			ul
				for error in errors
					li!= error.msg